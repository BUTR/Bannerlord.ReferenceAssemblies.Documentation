{
  "metadata": [
    {
      "src": [
        {
          "src": "../Stable/bannerlord.referenceassemblies.core.earlyaccess",
          "files": [ "**.dll"],
		  "exclude": [ "**/*.AutoGenerated*", "**/*.BattleEye*", "**/*.Steam*", "**/*.Epic*", "**/*.Test*" ]
        }
      ],
      "dest": "api_core"
    },
    {
      "src": [
        {
          "src": "../Stable/bannerlord.referenceassemblies.native.earlyaccess",
          "files": [ "**.dll"]
        }
      ],
      "dest": "api_native"
    },
    {
